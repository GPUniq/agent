# Пример Dockerfile для создания образа с SSH сервером
# Используйте этот файл как основу для создания своих образов

FROM ubuntu:22.04

# Устанавливаем SSH сервер и необходимые пакеты
RUN apt-get update && apt-get install -y \
    openssh-server \
    sudo \
    curl \
    wget \
    git \
    vim \
    nano \
    htop \
    && rm -rf /var/lib/apt/lists/*

# Создаем директорию для SSH
RUN mkdir /var/run/sshd

# Настраиваем SSH
RUN echo 'root:password' | chpasswd
RUN sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config

# SSH login fix. Otherwise user is kicked off after login
RUN sed 's@session\s*required\s*pam_loginuid.so@session optional pam_loginuid.so@g' -i /etc/pam.d/sshd

# Создаем рабочую директорию
RUN mkdir /workspace
WORKDIR /workspace

# Экспортируем порт SSH
EXPOSE 22

# Запускаем SSH сервер
CMD ["/usr/sbin/sshd", "-D"] 